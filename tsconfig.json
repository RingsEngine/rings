{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "../*": ["src/*"],
      "@rings/*": ["packages/*"],
      "@rings/core": ["src"],
      // "@samples/*": ["samples/*"],
      "@docs/*": ["docs/*"],
      "dat.gui": ["packages/debug/dat.gui.module"]
    },
    "types": ["vite/client", "@webgpu/types"],
    "allowJs": true,
    "strict": false,
    "experimentalDecorators": true
  },
  "include": ["src", "test", "docs"],
  "exclude": ["node_modules", "dist", "public"]
}
